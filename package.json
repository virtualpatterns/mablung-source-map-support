{
  "author": "virtualpatterns.com <code@virtualpatterns.com> (http://www.virtualpatterns.com)",
  "ava": {
    "failFast": true,
    "files": [
      "distributable-commonjs/test/**/*.test.*",
      "distributable-esmodule/test/**/*.test.*"
    ],
    "nodeArguments": [
      "--no-warnings",
      "--unhandled-rejections=strict"
    ],
    "require": [
      "./distributable-esmodule/install.js"
    ],
    "verbose": true
  },
  "c8": {
    "exclude": [
      "distributable-commonjs/test",
      "distributable-esmodule/test"
    ],
    "reporter": [
      "lcov"
    ]
  },
  "description": "TBD",
  "exports": {
    ".": {
      "import": "./distributable-esmodule/index.js",
      "require": "./distributable-commonjs/index.cjs"
    },
    "./install": {
      "import": "./distributable-esmodule/install.js",
      "require": "./distributable-commonjs/install.cjs"
    }
  },
  "license": "GPL-3.0+",
  "main": "distributable-commonjs/index.cjs",
  "name": "@virtualpatterns/mablung-source-map-support",
  "repository": {
    "type": "git",
    "url": "https://github.com/virtualpatterns/mablung-source-map-support"
  },
  "scripts": {
    "refresh:10": "shx rm -f package-lock.json",
    "refresh:20": "shx rm -Rf node_modules",
    "refresh:30": "npm cache clean --force",
    "refresh:40": "npm install",
    "refresh": "run-s --silent refresh:*",
    "upgrade:10": "npm-check-updates --upgrade",
    "upgrade:20": "shx rm -f package-lock.json",
    "upgrade:30": "npm install",
    "upgrade": "run-s --silent upgrade:*",
    "clean:10": "shx rm -Rf coverage distributable-commonjs distributable-esmodule",
    "clean": "run-s --silent clean:*",
    "lint:10": "eslint --ext .cjs --ignore-path .gitignore source-commonjs",
    "lint:20": "eslint --ext .js  --ignore-path .gitignore source-esmodule",
    "lint:30": "depcheck",
    "lint": "run-s --silent lint:*",
    "build:10": "babel source-commonjs --copy-files --extensions .cjs --keep-file-extension --out-dir distributable-commonjs --source-maps",
    "build:20": "babel source-esmodule --copy-files --extensions .js  --keep-file-extension --out-dir distributable-esmodule --source-maps",
    "build": "run-s --silent clean lint build:*",
    "test:10": "c8 ava",
    "test": "run-s --silent build \"test:10 {@}\" --",
    "run:10": "node --no-warnings --unhandled-rejections=strict",
    "run": "run-s --silent build \"run:10 {@}\" --",
    "pre:push:10": "git add coverage distributable-commonjs distributable-esmodule",
    "pre:push:20": "git commit --message=\"post-test\"",
    "pre:push": "run-s --silent test pre:push:*",
    "push:10": "npm version prerelease",
    "push:20": "git push origin master",
    "push": "run-s --silent pre:push push:*"
  },
  "type": "module",
  "version": "0.0.2-11",
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.1",
    "@babel/preset-env": "^7.12.1",
    "ava": "^3.11.1",
    "babel-eslint": "^10.1.0",
    "c8": "^7.3.0",
    "depcheck": "^1.0.0",
    "eslint": "^7.6.0",
    "eslint-plugin-babel": "^5.3.1",
    "npm-check-updates": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.2"
  },
  "dependencies": {
    "source-map-support": "^0.5.19"
  }
}
